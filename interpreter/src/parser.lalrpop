use std::str::FromStr;
use crate::set::*;

grammar;

pub Expr: i32 = {
    <a:Expr> "+" <b:Factor> => a + b,
    <a:Expr> "-" <b:Factor> => a - b,
    Factor
};

Term: i32 = {
    Num,
    "(" <Expr> ")",
};

Factor: i32 = {
    Term,
    <a:Factor> "/" <b:Term> => a / b,
    <a:Factor> "*" <b:Term> => a * b,
};

Num: i32 = r"[0-9]+" => i32::from_str(<>).unwrap();
